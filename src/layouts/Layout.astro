---
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  lang: 'hu' | 'en';
  canonical?: string;
}

const { title, description, lang, canonical } = Astro.props;

// Get current URL for hreflang
const currentPath = Astro.url.pathname;
const baseUrl = 'https://dendora.hu';

// Generate hreflang URLs
const hreflangs = {
  hu: lang === 'en' && currentPath.startsWith('/en/') 
    ? currentPath.replace('/en/', '/') 
    : currentPath,
  en: lang === 'hu' && !currentPath.startsWith('/en/') 
    ? `/en${currentPath === '/' ? '' : currentPath}`
    : currentPath
};

// Clean up URLs
if (hreflangs.hu === '/') hreflangs.hu = '/';
if (hreflangs.en === '/en') hreflangs.en = '/en/';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    
    <!-- Preload critical font -->
    <link rel="preload" href="https://fonts.gstatic.com/s/inter/v18/UcC73FwrK3iLTeHuS_fvQtMwCp50KnMa1ZL7W0Q5nw.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Performance hints -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    
    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="keywords" content="software development, web development, mobile apps, React, TypeScript, Go, Kubernetes, full-stack development, frontend, backend, cloud infrastructure" />
    <meta name="author" content="Dendora" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical || `${baseUrl}${currentPath}`} />
    
    <!-- Hreflang for multilingual SEO -->
    <link rel="alternate" hreflang="hu" href={`${baseUrl}${hreflangs.hu}`} />
    <link rel="alternate" hreflang="en" href={`${baseUrl}${hreflangs.en}`} />
    <link rel="alternate" hreflang="x-default" href={`${baseUrl}${hreflangs.hu}`} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${baseUrl}${currentPath}`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${baseUrl}/dendora-sw-dev-logo.png`} />
    <meta property="og:site_name" content="Dendora" />
    <meta property="og:locale" content={lang === 'hu' ? 'hu_HU' : 'en_US'} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={`${baseUrl}${currentPath}`} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${baseUrl}/dendora-sw-dev-logo.png`} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/dendora-d-logo.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/dendora-d-logo.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/dendora-d-logo.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Dendora",
      "description": "Software development company specializing in web and mobile applications",
      "url": "https://dendora.hu",
      "logo": "https://dendora.hu/dendora-sw-dev-logo.png",
      "email": "hello@dendora.hu",
      "sameAs": [
        "https://github.com/dendora"
      ],
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "HU"
      },
      "foundingDate": "2014",
      "numberOfEmployees": "2-10",
      "knowsAbout": [
        "Web Development",
        "Mobile Development",
        "React",
        "TypeScript",
        "Go",
        "Kubernetes",
        "Full-stack Development"
      ],
      "serviceType": [
        "Software Development",
        "Web Application Development", 
        "Mobile Application Development",
        "Cloud Infrastructure",
        "Product Strategy & Validation",
        "Frontend Development",
        "Backend Development"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Software Development Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Product Strategy & Validation",
              "description": "Scope, roadmap, and validation services"
            }
          },
          {
            "@type": "Offer", 
            "itemOffered": {
              "@type": "Service",
              "name": "Frontend Development",
              "description": "React, TypeScript, and modern frameworks with production-ready design systems"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service", 
              "name": "Backend & Infrastructure",
              "description": "Go microservices, PostgreSQL, Docker, and Kubernetes cloud-native architecture"
            }
          }
        ]
      }
    }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>