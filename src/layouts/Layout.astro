---
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  lang: 'hu' | 'en';
  canonical?: string;
}

const { title, description, lang, canonical } = Astro.props;

// Get current URL for hreflang
const currentPath = Astro.url.pathname;
const baseUrl = 'https://dendora.hu';

// Generate hreflang URLs
const hreflangs = {
  hu: currentPath.startsWith('/en/') 
    ? currentPath.replace('/en/', '/').replace('/en', '/') 
    : currentPath,
  en: !currentPath.startsWith('/en/') 
    ? `/en${currentPath === '/' ? '' : currentPath}`
    : currentPath
};

// Ensure clean URLs
if (hreflangs.hu === '/') hreflangs.hu = '/';
if (hreflangs.en === '/en') hreflangs.en = '/en/';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    
    <!-- Performance hints -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="keywords" content="AI software development, LLM integration, agentic workflows, intelligent automation, web development, mobile apps, React, TypeScript, Go, Kubernetes, full-stack development, AI agency" />
    <meta name="author" content="Dendora" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical || `${baseUrl}${currentPath}`} />
    
    <!-- Hreflang for multilingual SEO -->
    <link rel="alternate" hreflang="hu" href={`${baseUrl}${hreflangs.hu}`} />
    <link rel="alternate" hreflang="en" href={`${baseUrl}${hreflangs.en}`} />
    <link rel="alternate" hreflang="x-default" href={`${baseUrl}${hreflangs.hu}`} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${baseUrl}${currentPath}`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${baseUrl}/dendora-sw-dev-logo.png`} />
    <meta property="og:site_name" content="Dendora" />
    <meta property="og:locale" content={lang === 'hu' ? 'hu_HU' : 'en_US'} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={`${baseUrl}${currentPath}`} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${baseUrl}/dendora-sw-dev-logo.png`} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/dendora-d-logo.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/dendora-d-logo.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/dendora-d-logo.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Dendora",
      "description": "AI-native software development agency specializing in LLM integrations, agentic workflows, and full-stack web and mobile applications",
      "url": "https://dendora.hu",
      "logo": "https://dendora.hu/dendora-sw-dev-logo.png",
      "email": "hello@dendora.hu",
      "sameAs": [
        "https://github.com/dendora"
      ],
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "HU"
      },
      "foundingDate": "2014",
      "numberOfEmployees": "2-10",
      "knowsAbout": [
        "Artificial Intelligence",
        "Large Language Models",
        "Agentic AI Workflows",
        "LLM Integration",
        "Web Development",
        "Mobile Development",
        "React",
        "TypeScript",
        "Go",
        "Kubernetes",
        "Full-stack Development"
      ],
      "serviceType": [
        "AI Software Development",
        "LLM Integration",
        "Agentic Workflow Development",
        "Web Application Development", 
        "Mobile Application Development",
        "Cloud Infrastructure",
        "Product Strategy & Validation",
        "Frontend Development",
        "Backend Development"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Software Development Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Product Strategy & Validation",
              "description": "Scope, roadmap, and validation services"
            }
          },
          {
            "@type": "Offer", 
            "itemOffered": {
              "@type": "Service",
              "name": "Frontend Development",
              "description": "React, TypeScript, and modern frameworks with production-ready design systems"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service", 
              "name": "Backend & Infrastructure",
              "description": "Go microservices, PostgreSQL, Docker, and Kubernetes cloud-native architecture"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "AI & Agentic Solutions",
              "description": "LLM integrations, agentic workflows, and intelligent automation for real business problems"
            }
          }
        ]
      }
    }
    </script>
  </head>
  <body>
    <slot />
    <script>
      // Scroll to hash target after React components have mounted
      if (window.location.hash) {
        const hash = window.location.hash;
        const tryScroll = () => {
          const el = document.querySelector(hash);
          if (el) {
            el.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        };
        // Try after a short delay to allow React hydration
        setTimeout(tryScroll, 300);
      }
    </script>
  </body>
</html>