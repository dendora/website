---
import WorkLayout from '../../../layouts/WorkLayout.astro';
import FoundryPulseDetails from '../../../components/FoundryPulseDetails.tsx';
import { t } from '../../../lib/translations.ts';

const lang = 'en' as const;
const title = t(lang, 'foundryPulse.title') + ' - Dendora';
const description = t(lang, 'foundryPulse.subtitle');
const projectTitle = t(lang, 'foundryPulse.title');
const projectSubtitle = t(lang, 'foundryPulse.subtitle');
---

<WorkLayout 
  title={title} 
  description={description} 
  lang={lang}
  projectTitle={projectTitle}
  projectSubtitle={projectSubtitle}
>
  <FoundryPulseDetails language={lang} client:load />
</WorkLayout>