---
import Layout from '../layouts/Layout.astro';
import { ConfigurableLanding } from '../components/pages';
import { t } from '../lib/translations.ts';

const lang = 'hu' as const;
const title = t(lang, 'hero.title') + ' - Dendora';
const description = t(lang, 'hero.subtitle');
---

<Layout title={title} description={description} lang={lang}>
  <ConfigurableLanding language={lang} client:load />
</Layout>
